@model Project.Core.Entities.Common.Account.Dtos.LoginDto

@{
    ViewData["Title"] = "SignIn";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="col-md-5 bg-white sign-in-page-data">
    <div class="sign-in-from" style="margin-top:5%">
        <h1 class="mb-0 text-center">Sign in</h1>
        <p class="text-center text-dark">Enter your credentials to access.</p>
        <form class="mt-4" method="post">
            <div class="form-group">
                <label for="exampleInputEmail1">Email address</label>
                <input type="text" asp-for="Username" class="form-control mb-0" placeholder="Enter email" value="user">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Password</label>
                <a href="~/#" class="float-right">Forgot password?</a>
                <input type="password" asp-for="Password" class="form-control mb-0" placeholder="Password" value="pass">
            </div>
            <div class="d-inline-block w-100">
                <div class="custom-control custom-checkbox d-inline-block mt-2 pt-1">
                    <input type="checkbox" class="custom-control-input" id="customCheck1">
                    <label class="custom-control-label" for="customCheck1">Remember Me</label>
                </div>
            </div>
            <div class="sign-info text-center">
                <button type="submit" class="btn btn-primary d-block w-100 mb-2">Sign in</button>
                @* <span class="text-dark dark-color d-inline-block line-height-2">Don't have an account? <a href="~/#">Sign up</a></span> *@
            </div>
        </form>
    </div>
</div>